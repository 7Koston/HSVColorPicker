<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <com.github.koston.preference.view.ColorPicker
    android:id="@+id/hue"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"/>

  <com.github.koston.preference.view.SaturationValueBar
    android:id="@+id/saturationBar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:layout_below="@+id/hue"
    android:layout_centerHorizontal="true"
    app:barOrientationHorizontal="true"
    app:barType="saturation"/>

  <com.github.koston.preference.view.SaturationValueBar
    android:id="@+id/valueBar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:layout_below="@+id/saturationBar"
    android:layout_centerHorizontal="true"
    app:barOrientationHorizontal="true"
    app:barType="value"/>

  <com.github.koston.preference.view.OpacityBar
    android:id="@+id/opacityBar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:layout_below="@+id/valueBar"
    android:layout_centerHorizontal="true"
    app:barOrientationHorizontal="true"/>

  <EditText
    android:id="@+id/hex"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:layout_below="@+id/opacityBar"
    android:layout_centerHorizontal="true"
    android:autofillHints="@+id/hex"
    android:background="@null"
    android:digits="#0123456789ABCDEFabcdef"
    android:hint="@string/hex"
    android:imeOptions="actionGo"
    android:inputType="textNoSuggestions"
    android:labelFor="@+id/hex"
    android:maxLength="9"
    android:maxLines="1"
    android:minWidth="108dp"
    android:textColor="?android:attr/textColorPrimary"
    android:textSize="18sp"
    tools:ignore="UnusedAttribute"/>

</RelativeLayout>
