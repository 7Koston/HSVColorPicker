<?xml version="1.0" encoding="utf-8"?>
<resources>

  <declare-styleable name="ColorPicker">
    <attr name="hueWheelRadius" format="dimension" />
    <attr name="hueWheelThickness" format="dimension" />
    <attr name="centerCircleRadius" format="dimension" />
    <attr name="centerCircleHaloRadius" format="dimension" />
    <attr name="huePointerRadius" format="dimension" />
    <attr name="huePointerHaloRadius" format="dimension" />
    <attr name="pointersHaloColor" format="color" />
  </declare-styleable>

  <declare-styleable name="ColorPickerBars">
    <attr name="barType" format="enum">
      <enum name="saturation" value="1" />
      <enum name="value" value="2" />
    </attr>
    <attr name="barThickness" format="dimension" />
    <attr name="barLength" format="dimension" />
    <attr name="barPointerRadius" format="dimension" />
    <attr name="barPointerHaloRadius" format="dimension" />
    <attr name="barOrientationHorizontal" format="boolean" />
    <attr name="barPointerHaloColor" format="color" />
  </declare-styleable>

  <declare-styleable name="ColorPreference">
    <attr name="indicatorColorPreview" format="boolean|reference" />
    <!--ColorPicker-->
    <attr name="hueWheelRadius" />
    <attr name="hueWheelThickness" />
    <attr name="centerCircleRadius" />
    <attr name="centerCircleHaloRadius" />
    <attr name="huePointerRadius" />
    <attr name="huePointerHaloRadius" />
    <!--ColorBars-->
    <attr name="barThickness" />
    <attr name="barLength" />
    <attr name="barPointerRadius" />
    <attr name="barPointerHaloRadius" />
    <!--Both-->
    <attr name="pointersHaloColor" />
  </declare-styleable>

</resources>
