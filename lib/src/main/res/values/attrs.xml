<?xml version="1.0" encoding="utf-8"?>
<resources>

  <declare-styleable name="ColorPicker">
    <attr format="dimension" name="WheelRadius"/>
    <attr format="dimension" name="WheelThickness"/>
    <attr format="dimension" name="CenterCircleRadius"/>
    <attr format="dimension" name="CenterCircleHaloRadius"/>
    <attr format="dimension" name="PointerRadius"/>
    <attr format="dimension" name="PointerHaloRadius"/>
  </declare-styleable>

  <declare-styleable name="ColorBars">
    <attr format="dimension" name="BarThickness"/>
    <attr format="dimension" name="BarLength"/>
    <attr format="dimension" name="BarPointerRadius"/>
    <attr format="dimension" name="BarPointerHaloRadius"/>
    <attr format="boolean" name="BarOrientationHorizontal"/>
  </declare-styleable>

  <declare-styleable name="OpacityBar">
    <attr name="BarThickness"/>
    <attr name="BarLength"/>
    <attr name="BarPointerRadius"/>
    <attr name="BarPointerHaloRadius"/>
    <attr name="BarOrientationHorizontal"/>
  </declare-styleable>

  <declare-styleable name="SaturationValueBar">
    <attr name="BarType">
      <enum name="saturation" value="1"/>
      <enum name="value" value="2"/>
    </attr>
    <attr name="BarThickness"/>
    <attr name="BarLength"/>
    <attr name="BarPointerRadius"/>
    <attr name="BarPointerHaloRadius"/>
    <attr name="BarOrientationHorizontal"/>
  </declare-styleable>

  <declare-styleable name="ColorPreference">
    <attr format="boolean|reference" name="indicatorColorPreview"/>
    <!--ColorPicker-->
    <attr name="WheelRadius"/>
    <attr name="WheelThickness"/>
    <attr name="CenterCircleRadius"/>
    <attr name="CenterCircleHaloRadius"/>
    <attr name="PointerRadius"/>
    <attr name="PointerHaloRadius"/>
    <!--ColorBars-->
    <attr name="BarThickness"/>
    <attr name="BarLength"/>
    <attr name="BarPointerRadius"/>
    <attr name="BarPointerHaloRadius"/>
    <attr name="BarOrientationHorizontal"/>
  </declare-styleable>

</resources>
